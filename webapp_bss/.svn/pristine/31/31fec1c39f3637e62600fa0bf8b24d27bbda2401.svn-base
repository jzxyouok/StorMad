/* --------------------------------------------------
-------------------------------------------------- */

html,
body {
    height: 100%;
    background-color: #f8f8f8;
}

body {
    text-align: center;
    font-family: "微软雅黑";
}

a,
a:hover {
    padding: 0 5px;
}

.btn-default {
    height: 50px !important;
}


/*header*/

header.login-header {
    position: inherit;
    text-align: left;
    width: 100%;
    height: 125px;
    background-color: #fff;
    box-shadow: none;
}

header.login-header .logo {
    line-height: 1;
    background-color: inherit;
    padding-top: 35px;
}


/* 登录 login/index start */

.wrapper {
    display: table;
    width: 100%;
    height: calc(100vh - 125px - 94px);
}

.wrapper-inner {
    display: table-cell;
    vertical-align: middle;
}


/*login-container*/

.login-container {
    position: relative;
}

.login-container .left {
    float: left;
}

.login-container .left img {
    width: 100%;
}

.login-container .right {
    position: absolute;
    top: 0;
    right: 0;
}

.login-container .right form {
    width: 420px;
    padding: 35px;
    /*margin: 0 35px;*/
    background-color: #fff;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, .3);
}

.login-container .right form .form-group {
    position: relative;
    font-size: 12px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 20px;
}

.login-container .right form .form-group:last-child {
    margin-bottom: 0;
}

.login-container .right form .form-group input {
    /*color: #bababa;*/
    color: #333;
    font-size: 12px;
    height: 50px;
    line-height: 50px;
    padding: 0;
    padding-left: 65px;
    border: 1px solid #bec2cc;
    border-radius: 0px;
}

.login-container form .form-group input:focus {
    color: #e6614f;
    border: 1px solid #94b6ed;
    box-shadow: none;
}

.login-container form .form-group i {
    width: 20px;
    height: 20px;
    text-align: center;
    position: absolute;
    top: 15px;
    left: 12px;
}

.login-container form .form-group i.input-icon {
    width: 48px;
    height: 48px;
    text-align: center;
    position: absolute;
    top: 1px;
    left: 1px;
    background-color: #c3c7d0;
}

.login-container form .form-group i.user-icon {
    background: url(../img/css-sprite.png) 0 -50px no-repeat;
    background-color: #c3c7d0;
}

.login-container form .form-group i.password-icon {
    background: url(../img/css-sprite.png) -48px -50px no-repeat;
    background-color: #c3c7d0;
}

.login-container form .form-group i.verification-icon {
    background: url(../img/css-sprite.png) -96px -50px no-repeat;
    background-color: #c3c7d0;
}

.login-container form .form-group .verification-code {
    width: 220px;
    height: 50px;
    float: left;
}

.login-container form .form-group .verification-code-pic {
    width: 125px;
    height: 50px;
    float: left;
    margin-left: 5px;
    overflow: hidden;
}

.login-container form .form-group .verification-code-pic img {
    width: 125px;
    height: 50px;
}


/*footer*/

footer {
    color: #21242b;
    font-size: 12px;
    line-height: 22px;
    padding: 30px 0;
    background-color: #fff;
    margin: 0;
}

footer a,
footer a:focus,
footer a:hover {
    color: #21242b;
    text-decoration: none;
    padding: 0 3px;
}


/* 登录 login/index end */


