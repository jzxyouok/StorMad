@media screen and (max-width: 1500px) {
    .ad-management-review .main-body .top form,
    .invoice-review .main-body .top form,
    .operation-log .main-body .top form {
        height: 110px;
        padding: 20px;
    }
    .ad-management-review .main-body .top form .layui-form-item,
    .invoice-review .main-body .top form .layui-form-item,
    .operation-log .main-body .top form .layui-form-item {
        position: relative;
    }
    .ad-management-review .main-body .top form .layui-form-item .layui-input-inline:last-child,
    .invoice-review .main-body .top form .layui-form-item .layui-input-inline:last-child,
    .operation-log .main-body .top form .layui-form-item .layui-input-inline:last-child {
        position: absolute;
        left: 0;
        top: 30px;
        float: left !important;
        width: auto;
        padding-top: 10px;
        margin-left: 0;
    }
}


