-------------------------------------------------- */

@media screen and (max-width: 1440px) {}


/* --------------------------------------------------
-------------------------------------------------- */

@media screen and (max-width: 1366px) {
    .container {
        width: 1200px;
    }
    .login-container .left {
        width: 50%;
    }
    .login-container .right {
        top: -30px;
    }
    .main-body .top form .layui-form-item .layui-input-inline {
        width: 140px;
    }
    .operation-log .main-body .layui-form-item .layui-input-inline:nth-child(7) {
        width: auto !important;
    }
    .col-box {
        width: 90%;
    }
    .col-xs-offset-2 {
        margin-left: 5%;
    }
}


/* --------------------------------------------------
-------------------------------------------------- */

@media screen and (max-width: 1280px) {
    .container {
        width: 1200px;
    }
    .login-container .left {
        width: 50%;
    }
    .operation-log .main-body .layui-form-item .layui-input-inline:nth-child(7) {
        width: auto !important;
    }
    .col-box {
        width: 90%;
    }
    .col-xs-offset-1 {
