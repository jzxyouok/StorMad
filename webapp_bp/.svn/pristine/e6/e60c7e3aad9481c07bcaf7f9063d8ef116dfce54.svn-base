/*login-container*/

.login-container form {
    width: 360px;
    margin: 0 auto;
}

.login-container form .form-group {
    position: relative;
    margin: 0;
    margin-bottom: 10px;
}

.login-container form .form-group input {
    color: #bababa;
    font-size: 12px;
    height: 50px;
    line-height: 50px;
    border: 1px solid #d5d5d5;
    border-radius: 2px;
    box-shadow: none;
    padding: 0 12px;
    padding-left: 45px;
}

.login-container form .form-group input:focus {
    color: #e6614f;
    border-color: #c47773;
}

.login-container form .form-group i {
    width: 20px;
    height: 20px;
    text-align: center;
    position: absolute;
    top: 15px;
    left: 12px;
}

.login-container form .form-group i.user-icon {
    background: url(../img/css-sprite.png) 0 0 no-repeat;
}

.login-container form .form-group i.password-icon {
    background: url(../img/css-sprite.png) -30px 0 no-repeat;
}

.login-container form .form-group .verification-code {
    width: 220px;
    height: 50px;
    float: left;
}

.login-container form .form-group .verification-code input {
    padding-left: 20px;
}

.login-container form .form-group .verification-code-pic {
    width: 130px;
    height: 50px;
    float: left;
    margin-left: 10px;
    overflow: hidden;
}

.login-container form .form-group .verification-code-pic img {
    width: 130px;
    height: 50px;
    border-radius: 2px;
}

.login-container form .checkbox-main > label > span > i {
    width: 14px;
    height: 14px;
    position: absolute;
    left: 0;
    top: 0;
}

.login-container form .checkbox-main > label > span > input {
    width: 14px;
    height: 14px;
    padding: 0;
    margin: 0;
}

.login-container form .form-group p i {
    position: absolute;
    top: 2px;
    left: 0;
}

.login-container form .button-box {
    padding-bottom: 30px;
    margin-bottom: 0;
}

.login-container form .button-box .btn-default {
    height: 50px;
}

.login-container form .account-box {
    padding-bottom: 105px;
    margin-bottom: 0;
}


