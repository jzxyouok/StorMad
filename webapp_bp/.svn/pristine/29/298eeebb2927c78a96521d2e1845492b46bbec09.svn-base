/*switch*/

.pull-right {
	line-height: 90px;
}

.pull-right p {
	margin-top: 0;
}

.bootstrap-switch {
	display: inline-block;
	cursor: pointer;
	border-radius: 2px;
	border: 1px solid #d5d5d5;
}

.bootstrap-switch .bootstrap-switch-handle-off.bootstrap-switch-default {
	color: #666;
	background: #f8f8f8;
}


/*switch end*/

