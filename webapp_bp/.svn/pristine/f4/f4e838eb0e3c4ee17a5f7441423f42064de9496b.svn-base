-------------------------------------------------- */


/*return start*/

.return {
    position: absolute;
    top: 7px;
    left: 7px;
    font-size: 12px;
    width: 80px;
    height: 50px;
}

.return .btn-default {
    color: #666;
    font-size: 12px;
    width: 80px;
    height: 50px;
    text-shadow: none;
    background-color: #f8f8f8;
    border: none;
    border-radius: 0;
    outline: 0;
}

.return .btn-default:hover {
    color: #fff;
    background-color: #e6614f;
    outline: 0;
}

.return .btn-default:active:focus {
    color: #fff;
    background-color: #e6614f;
    border: none;
    border-top: 3px solid #c74545;
    box-shadow: none;
    outline: 0;
}


/*return end*/


