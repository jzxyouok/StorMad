/*checkbox*/

.checkbox-main > label {
    color: #75757a;
    font-size: 12px;
    font-weight: normal;
    float: left;
    margin-bottom: 5px;
}

.checkbox-main > label > span {
    display: inline-block;
    position: relative;
    top: 2px;
    width: 14px;
    height: 14px;
    min-height: auto;
    line-height: 14px;
    /*vertical-align: middle;*/
    margin-right: 4px;
}

.checkbox-main > label > span > input {
    /*filter: alpha(opacity=0);
     -moz-opacity: 0;
     -khtml-opacity: 0;
     -webkit-opacity: 0;*/
    opacity: 0;
    width: 14px;
    height: 14px;
    position: relative;
    z-index: 9;
}

.checkbox-main > label > span > i {
    border: 1px solid #979797;
    border-radius: 2px;
    display: inline-block;
}

.checkbox-main > label > span > input:checked+ i {
    background-color: #e6614f;
    border-color: #c74545;
}

.checkbox-main > label > span > input:checked+ i:after {
    content: "";
    width: 6px;
    height: 4px;
    display: inline-block;
    position: absolute;
    left: 50%;
    top: 50%;
    border: 2px solid #fff;
    margin-left: -3px;
    margin-top: -3px;
    border-top: 0;
    border-right: 0;
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    transform: rotate(-45deg);
}


/*checkbox*/


