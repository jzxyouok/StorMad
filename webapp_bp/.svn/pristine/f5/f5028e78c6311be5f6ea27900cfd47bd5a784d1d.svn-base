package com.yonghui.webapp.bp.util;

import cn770880.jutil.j4log.Logger;

/**
 * 
 * <br>
 * <b>功能：</b>操作日志工具类<br>
 * <b>日期：</b>2016年12月10日<br>
 * <b>作者：</b>RUSH<br>
 *
 */
public class OperateLogUtil {

	private static final Logger LOG = Logger.getLogger("webapp_bp_operate");

	/**
	 * 
	 * <br>
	 * <b>功能：</b>记录操作日志<br>
	 * <b>日期：</b>2016年12月10日<br>
	 * <b>作者：</b>RUSH<br>
	 *
	 * @param content
	 * @param operatorId
	 * @param operatorName
	 * @param isSuccess
	 */
	public static void writeOperateLog(String content, int operatorId, 
			String operatorName, OpType opType, boolean isSuccess) {
		LOG.info("content["+content+"] operatorId["+operatorId+"] "
				+ "operatorName["+operatorName+"] opType["+opType+"] isSuccess["+isSuccess+"]");
	}
	
	
	public static enum OpType {
		ADD(1),
		UPDATE(2),
		DELETE(3);
		
		private int type;
		
		private OpType(int type) {
			this.type = type;
		}

		public int getType() {
			return type;
		}

		public void setType(int type) {
			this.type = type;
		}
		
		@Override
		public String toString() {
			return type + "";
		}
	}
}
