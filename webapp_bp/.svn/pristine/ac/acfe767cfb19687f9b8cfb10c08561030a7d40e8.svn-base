		<link rel="icon" href="img/favicon.ico">

		<title>永辉竞价投放系统 - 忘记密码</title>

		<!-- Bootstrap core CSS -->
		<link href="../extend/bootstrap/css/bootstrap.min.css" rel="stylesheet">

		<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
		<link href="../assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

		<!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
		<!--[if lt IE 9]><script src="assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
		<script src="../assets/js/ie-emulation-modes-warning.js"></script>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

		<!-- extend css -->
		<link rel="stylesheet" href="../extend/font-awesome/css/font-awesome.css">
		<link rel="stylesheet" href="../extend/layui/css/layui.css">

		<!-- Custom styles for this template -->
		<link href="../css/login.css" rel="stylesheet">

	</head>

	<body>
		<!--site-wrapper-->
		<div class="site-wrapper">
			<!--site-wrapper-inner-->
			<div class="site-wrapper-inner">

				<!--forgot-password-->
				<div class="login-container forgot-password step1">
					<div class="return">
						<button type="button" class="btn btn-default btn-reLogin">返回</button>
					</div>
					<div class="login">
						<div class="logo">
							<img src="../img/logo_login.png" />
						</div>
						<h2>找回密码</h2>
					</div>
					<div class="info">
						<p>您正在使用<strong>手机验证码</strong>验证身份，请完成以下操作： </p>
					</div>
					<form class="form-horizontal" role="form">
						<div class="form-group">
							<input type="text" class="form-control" id="user" placeholder="输入用户名">
						</div>
						<div class="form-group verification">
							<input type="text" class="form-control" id="code" placeholder="输入6位验证码" maxlength="6">
							<button type="button" class="btn btn-default" id="btnCode">获取验证码</button>
						</div>
						<div class="tips-box">
							<p><!-- <i class="exclamation-icon"></i>验证码有误 --></p>
						</div>
						<div class="form-group button-box">
							<button type="button" class="btn btn-default" id="btnNext">下一步</button>
						</div>
					</form>

				</div>
				<!--forgot-password end-->

				<!--forgot-password-->
				<div class="login-container forgot-password step2" style="display: none;">
					<div class="return">
						<button type="button" class="btn btn-default btn-return">返回</button>
					</div>
					<div class="login">
						<div class="logo">
							<img src="../img/logo_login.png" />
						</div>
						<h2>找回密码</h2>
					</div>
					<form class="new-password" role="form">
						<div class="form-group">
							<input type="password" class="form-control" id="password" placeholder="输入新密码">
						</div>
						<div class="form-group">
							<input type="password" class="form-control" id="passwordConfirm" placeholder="确认密码">
						</div>
						<div class="tips-box">
							<p><i class="exclamation-icon"></i>两次输入的密码不一致</p>
						</div>
						<div class="form-group button-box">
							<button type="button" class="btn btn-default" id="btnSubmit">提交</button>
						</div>
					</form>

				</div>
				<!--forgot-password end-->

				<!--forgot-password-success-->
				<div class="login-container forgot-password forgot-password-success step3" style="display: none">
					<!-- <div class="return">
						<button type="button" class="btn btn-default">返回</button>
					</div> -->
					<div class="login">
						<div class="logo">
							<img src="../img/logo_login.png" />
						</div>
						<h2>重置成功，请牢记新的登录密码。</h2>
					</div>
					<div class="form-group button-box">
						<button type="button" class="btn btn-default btn-reLogin">重新登录</button>
					</div>
				</div>
				<!--forgot-password-success end-->

				<!--footer-->
				<footer>
					<p>Copyright @2016
						<a href="#">永辉超市股份有限公司</a> All Rights Reserved.</p>
				</footer>
				<!--footer-->
			</div>
		</div>

		<!-- jQuery -->
		<script src="../js/jquery.min.js"></script>

		<!-- Bootstrap core JavaScript -->
		<script src="../extend/bootstrap/js/bootstrap.min.js"></script>

		<!-- Layui JavaScript -->
		<script src="../extend/layui/layui.js"></script>

		<!-- JavaScript -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script>
			window.jQuery || document.write('<script src="assets/js/vendor/jquery.min.js"><\/script>')
		</script>
		<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
		<script src="../assets/js/ie10-viewport-bug-workaround.js"></script>

		<!--custom-->
		<script src="../js/custom.js"></script>
		<script src="../js/common.js"></script>
		<script src="./js/login-forgot-password.js"></script>

	</body>

</html>